<%= form_with model: @user, url: user_path do |form|%>
<br>
<br>

<div>
  <%= form.label :username, 'Your user name here' %>
  <br/>
  <%= form.text_field :username, placeholder:"Username", :value => "abc" %>
</div>
<br>

<div>
  <% form.label :email %>
  <%= form.email_field :email, placeholder:"example@example.com"  %>
</div>
<br>

<div>
  <% form.label :password %>
  <%= form.password_field :password, placeholder:"password"  %>
</div>
<br>
  <div>
    <%= form.submit %>
  </div>

<% end %>